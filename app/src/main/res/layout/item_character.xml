<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/md_theme_surface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_character_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Имя персонажа"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/md_theme_primary"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_character_culture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Культура: Неизвестно"
            android:textColor="@color/md_theme_onSurfaceVariant"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_character_born"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Родился: Неизвестно"
            android:textColor="@color/md_theme_onSurfaceVariant"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_character_titles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Титулы: Отсутствуют"
            android:textColor="@color/md_theme_onSurfaceVariant"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_character_aliases"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Псевдонимы: Отсутствуют"
            android:textColor="@color/md_theme_onSurfaceVariant"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_character_played_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Играет: Не снимался в сериале"
            android:textColor="@color/md_theme_primary"
            android:textStyle="italic"
            android:layout_marginTop="4dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
